@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginInputModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="col-md-5 col-md-offset-3">
    <div class="page-header">
        <h1>Login</h1>
    </div>
        
    <div class="col-sm-8">

        <form asp-route="Login">
            <input type="hidden" asp-for="ReturnUrl" />
            <fieldset>
                <div class="form-group">
                    <input class="form-control" placeholder="Username" asp-for="UserName" id="username" autofocus autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" id="password" autocomplete="off">
                </div>
                <div class="btn-group btn-group-justified" role="group">
                    <div class="btn-group" role="group">
                        <button class="btn btn-primary btn-space" name="button" id="loginButton" value="login">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
